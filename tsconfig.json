{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@testing-library/jest-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@handlers/*": ["src/handlers/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
